{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022"],
    "module": "es2022",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules/**/*", "coverage"]
}
